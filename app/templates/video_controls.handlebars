<div class="video-player {{orientation}}">
  {{#if isAndroid}}
    <div id="android-video-overlay" style="background-image: url('img/{{imagePath}}');">
      <i class="fa fa-play" aria-hidden="true"></i>
    </div>
  {{else}}
    <video preload="auto" poster="img/{{imagePath}}">
        <source src="video/{{videoPath}}" type="video/mp4">
    </video>
    
    <div class="transport-controls">
        <div class="background"></div>
        <div class="container">
            <i class="fa fa-2x fa-fw fa-step-backward restart"></i>
            <span class="play-pause">
                <i class="fa fa-2x fa-fw fa-play play"></i>
                <i class="fa fa-2x fa-fw fa-pause pause"></i>
            </span>
        </div>
    </div>
  {{/if}}
</div>
